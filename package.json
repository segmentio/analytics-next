{
  "name": "analytics-monorepo",
  "private": true,
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/segmentio/analytics-next"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": "^14.15.0"
  },
  "scripts": {
    "test": "echo 'Running all tests...' && yarn workspaces foreach run test",
    "lint": "echo 'Linting all workspaces...' && yarn constraints && yarn workspaces foreach -p run lint",
    "build:dev": "yarn workspace @segment/analytics-next build:dev",
    "dev": "yarn workspace @segment/analytics-next exec make dev",
    "release-ci": "lerna publish from-package --y --no-verify-access ",
    "release:dry-run": "yarn release-ci --no-git-tag-version --no-push --dist-tag beta --yes",
    "changeset": "changeset"
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "concurrently": "^7.2.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "lerna": "^5.1.6",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^13.0.0",
    "node-gyp": "^9.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "resolutions": {
    "@segment/analytics-next": "workspace:*",
    "@segment/analytics-node": "workspace:*"
  }
}
