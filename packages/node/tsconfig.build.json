{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["**/__tests__/**"],
  "compilerOptions": {
    "outDir": "./dist/esm",
    "importHelpers": true,
    // publish sourceMaps
    "sourceMap": true,
    // publish declarationMaps (enable go-to-definition in IDE)
    "declarationMap": true,
    // add type declarations to "types" folder
    "declaration": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": false // workaround - https://stackoverflow.com/questions/55753163/package-json-is-not-under-rootdir/61467483#61467483
  }
}
