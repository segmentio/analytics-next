{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "module": "esnext",
    "target": "ES5",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist/pkg",
    "lib": ["es2020", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
