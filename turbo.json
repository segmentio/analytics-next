{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/tsconfig*.json",
        "**/*.ts",
        "**/*.tsx",
        ":!**/__tests__/**"
      ],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "lint": {
      "inputs": ["**/tsconfig*.json", "**/*.ts", "**/*.tsx", "**/*.js"],
      "outputs": []
    }
  }
}
