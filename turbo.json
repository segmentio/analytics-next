{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "**/tsconfig*.json",
        "**/babel.config*",
        "**/webpack.config*",
        "**/*.ts",
        "**/*.tsx",
        "!*/**/*.generated.*/*",
        "!*/**/__tests__/**",
        "!src/**/test-helpers/**"
      ],
      "outputs": [
        "**/dist/**",
        ".next/**"
      ]
    },
    "build:esm": {
      "dependsOn": [
        "^build:esm"
      ],
      "inputs": [
        "**/tsconfig*.json",
        "**/*.ts",
        "**/*.tsx",
        "!*/**/__tests__/**",
        "!src/**/test-helpers/**"
      ],
      "outputs": [
        "**/dist/esm/**"
      ]
    },
    "test": {
      "env": ["COVERAGE"],
      "dependsOn": [
        "build"
      ]
    },
    "test:int": {
      "dependsOn": [
        "build"
      ]
    },
    "tsc": {
      "cache": false
    },
    "assert-generated": {
      "cache": false
    },
    "watch": {
      "cache": false,
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "**/tsconfig*.json",
        "**/*.ts",
        "**/*.tsx"
      ],
      "outputs": []
    },
    "test:cloudflare-workers": {
      "dependsOn": [
        "build"
      ]
    },
    "test:perf-and-durability": {
      "dependsOn": [
        "build"
      ]
    }
  }
}
