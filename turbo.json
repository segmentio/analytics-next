{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", ":!__tests__/**"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "inputs": ["src/**", "test*/**"]
    },
    "watch": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "lint": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js"],
      "outputs": []
    }
  }
}
