{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**", "test*/**"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["**/*.ts?x", "**/*.js", "**/*.json"]
    }
  }
}
