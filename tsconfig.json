{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs" // get rid of "Cannot use import statement outside a module" for local scripts
    }
  }
}
