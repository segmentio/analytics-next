{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "dist/commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2020", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "scripts/release.ts"]
}
